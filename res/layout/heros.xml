<?xml version="1.0" encoding="utf-8"?>
<!-- 按英雄选择页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/hs_bg">

    <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">


    </LinearLayout>

    <RelativeLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

        <!-- 中间列 -->
        <LinearLayout
                android:layout_centerInParent="true"
                android:id="@+id/ll_hunter"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showHunterCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_hunter"
                    />

            <TextView
                    style="@style/heroName_style"
                    android:text="雷克萨"
                    android:textStyle="bold"/>

            <TextView

                    style="@style/heroName_style"
                    android:text="(猎人)"
                    android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_above="@id/ll_hunter"
                android:id="@+id/ll_shaman"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showShamanCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_shaman"
                    />

            <TextView
                    style="@style/heroName_style"
                    android:text="萨尔"
                    android:textStyle="bold"
                    />

            <TextView
                    style="@style/heroName_style"
                    android:text="(萨满祭司)"
                    android:textSize="11sp"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ll_hunter"
                android:id="@+id/ll_paladin"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showPaladinCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_paladin"
                    />

            <TextView
                    android:text="乌瑟尔"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(圣骑士)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <!-- 左列 -->
        <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ll_hunter"
                android:id="@+id/ll_mage"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showMageCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_mage"
                    />

            <TextView
                    style="@style/heroName_style"
                    android:text="吉安娜"
                    android:textStyle="bold"
                    />

            <TextView
                    android:text="(法师)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_toLeftOf="@id/ll_hunter"
                android:layout_above="@id/ll_mage"
                android:id="@+id/ll_Warrior"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showWarriorCards">

            <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_warrior"
                    />

            <TextView
                    android:text="加尔鲁什"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(战士)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_toLeftOf="@id/ll_hunter"
                android:layout_below="@id/ll_mage"
                android:id="@+id/ll_Druid"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showDruidCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_druid"
                    />

            <TextView
                    android:text="玛法里奥"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(德鲁伊)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <!-- 右列 -->
        <LinearLayout
                android:layout_toRightOf="@id/ll_hunter"
                android:layout_centerVertical="true"
                android:id="@+id/ll_Warlock"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showWarlockCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_warlock"
                    />

            <TextView
                    android:text="古尔丹"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(术士)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_toRightOf="@id/ll_hunter"
                android:layout_above="@id/ll_Warlock"
                android:id="@+id/ll_Priest"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showPriestCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_priest"
                    />

            <TextView
                    android:text="安杜因"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(牧师)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_toRightOf="@id/ll_hunter"
                android:layout_below="@id/ll_Warlock"
                android:id="@+id/ll_Rogue"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showRogueCards">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hero_rogue"
                    />

            <TextView
                    android:text="瓦莉拉"
                    android:textStyle="bold"
                    style="@style/heroName_style"
                    />

            <TextView
                    android:text="(潜行者)"
                    android:textSize="11sp"
                    style="@style/heroName_style"
                    />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
